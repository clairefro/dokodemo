model Space {
  id            String      @id @default(cuid())
  title         String
  accepting     Boolean
  demos         Demo[]
  createdAt     DateTime    @default(now())
}

model Demo {
  id            String      @id @default(cuid())
  space         Space       @relation(fields: [spaceId], references: [id])
  spaceId       String
  title         String
  accepting     Boolean
  createdAt     DateTime    @default(now())
}
